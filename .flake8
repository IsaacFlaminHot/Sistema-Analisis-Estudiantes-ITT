[flake8]
# Longitud máxima de línea
max-line-length = 120

# Ignorar errores específicos
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (manejado por max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (a veces necesario para imports de modelos)

# Excluir directorios
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    .pytest_cache,
    build,
    dist

# Archivos a incluir
filename = *.py

# Estadísticas
statistics = True

# Formato de salida
format = default

